<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_aramaogesi"
        />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_aramaogesi"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_aramakisi"
            android:text="kullanici"
            android:maxLines="1"
            android:textStyle="bold" />
        <TextView

            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSonmesaj"
            android:text=""
            android:maxLines="1"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/mesajgonder"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/iconchat"/>
    <ImageView
        android:id="@+id/kisibilgisi"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/iconinfo"/>


</RelativeLayout>