<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="25dp"
    android:background="@drawable/arkapln"
    tools:context=".cerceve.HesapAyarFragment">

    <ImageView
        android:id="@+id/imgyukle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="80dp"></ImageView>

    <Button
        android:id="@+id/btnfotoyukle"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/btnarka"
        android:text="Fotoğraf Yükle"></Button>

    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/textarka"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:text="İsim: "
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp"></TextView>

    <TextView
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="300dp"
        android:text="Şifre: "
        android:textAlignment="center"
        android:textStyle="bold"
android:background="@drawable/textarka"
        android:textSize="15dp"></TextView>

    <EditText
        android:id="@+id/edtSifre"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:hint="Yeni şifre giriniz...."
        android:textAlignment="center"

        android:layout_marginStart="120dp"
        android:background="@drawable/textarka"
        android:layout_marginTop="300dp"></EditText>
    <TextView
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="350dp"
        android:text="İletişim: "
        android:textStyle="bold"
        android:textAlignment="center"

        android:background="@drawable/textarka"
        android:textSize="15dp"></TextView>

    <EditText
        android:id="@+id/edtBilgi"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:hint="Yeni bilgi giriniz..."
        android:textAlignment="center"
        android:background="@drawable/textarka"
        android:layout_marginStart="120dp"
        android:layout_marginTop="350dp"></EditText>
    <TextView
        android:layout_width="68dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:text="Konum: "
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/textarka"
        android:textSize="15dp"></TextView>

    <EditText
        android:id="@+id/edtKonum"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:hint="Konum giriniz..."
        android:textAlignment="center"
        android:background="@drawable/textarka"
        android:layout_marginStart="120dp"
        android:layout_marginTop="400dp"></EditText>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FbtnGuncelle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="450dp"
        app:backgroundTint="@color/purple_500"
        android:tint="@color/teal_600"
        android:src="@drawable/icongonder"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <EditText
        android:id="@+id/edtIsim"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:hint="Yeni isim giriniz..."
        android:textAlignment="center"

        android:background="@drawable/textarka"
        android:layout_marginStart="120dp"
        android:layout_marginTop="250dp"></EditText>


</RelativeLayout>